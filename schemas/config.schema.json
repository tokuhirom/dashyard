{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/tokuhirom/dashyard/schemas/config.schema.json",
  "title": "Dashyard Configuration",
  "description": "Configuration file for the Dashyard application (config.yaml).",
  "type": "object",
  "properties": {
    "site_title": {
      "type": "string",
      "description": "The title displayed in the header. Defaults to \"Dashyard\".",
      "default": "Dashyard"
    },
    "header_color": {
      "type": "string",
      "description": "CSS color value for the header background (e.g. \"#dc2626\", \"red\"). When omitted, the default theme color is used.",
      "examples": ["#dc2626", "#3b82f6", "rgb(220, 38, 38)"]
    },
    "server": {
      "type": "object",
      "description": "HTTP server settings.",
      "properties": {
        "session_secret": {
          "type": "string",
          "description": "Secret key for session signing. Auto-generated if omitted."
        },
        "trusted_proxies": {
          "type": "array",
          "description": "List of IP addresses or CIDRs trusted to set X-Forwarded-For headers.",
          "items": {
            "type": "string"
          },
          "examples": [["10.0.0.1", "172.16.0.0/12"]]
        }
      },
      "additionalProperties": false
    },
    "prometheus": {
      "type": "object",
      "description": "Prometheus connection settings.",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Prometheus server URL.",
          "default": "http://localhost:9090"
        },
        "timeout": {
          "type": "string",
          "description": "Query timeout as a Go duration string (e.g. \"30s\", \"1m\").",
          "default": "30s",
          "pattern": "^[0-9]+(ns|us|ms|s|m|h)+$"
        }
      },
      "additionalProperties": false
    },
    "dashboards": {
      "type": "object",
      "description": "Dashboard directory settings.",
      "properties": {
        "dir": {
          "type": "string",
          "description": "Path to the directory containing dashboard YAML files.",
          "default": "dashboards"
        }
      },
      "additionalProperties": false
    },
    "users": {
      "type": "array",
      "description": "List of authenticated users.",
      "items": {
        "type": "object",
        "description": "A user account.",
        "properties": {
          "id": {
            "type": "string",
            "description": "Username for login."
          },
          "password_hash": {
            "type": "string",
            "description": "SHA-512 crypt password hash. Generate with: go run ./cmd/genhash <password>"
          }
        },
        "required": ["id", "password_hash"],
        "additionalProperties": false
      }
    },
    "auth": {
      "type": "object",
      "description": "Authentication settings.",
      "properties": {
        "oauth": {
          "type": "array",
          "description": "List of OAuth/OIDC providers. Currently only 'github' is supported.",
          "items": {
            "type": "object",
            "description": "An OAuth provider configuration.",
            "properties": {
              "provider": {
                "type": "string",
                "description": "Provider name (e.g. 'github').",
                "enum": ["github"]
              },
              "client_id": {
                "type": "string",
                "description": "OAuth client ID."
              },
              "client_secret": {
                "type": "string",
                "description": "OAuth client secret."
              },
              "redirect_url": {
                "type": "string",
                "format": "uri",
                "description": "OAuth callback URL (e.g. 'http://localhost:8080/auth/github/callback')."
              },
              "scopes": {
                "type": "array",
                "description": "OAuth scopes to request.",
                "items": { "type": "string" }
              },
              "allowed_users": {
                "type": "array",
                "description": "List of allowed usernames. If empty, all authenticated users are allowed.",
                "items": { "type": "string" }
              },
              "allowed_orgs": {
                "type": "array",
                "description": "List of allowed GitHub organization names.",
                "items": { "type": "string" }
              }
            },
            "required": ["provider", "client_id", "client_secret"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
